        <h1 class="project-name">Activity feed</h1>
    
        <div id="feedTimeline" >
            <div id="feedHolder" class="container">
                @foreach (var item in Model)
                {
                    <div class="timeline-item">
                        <div class="timeline-icon"></div>
                        <div class="timeline-content">
                            <h2>@item.Timestamp.ToString("yyyy/MM/dd HH:mm:ss")</h2>
                            <p>
                                @item.Description?.Replace(Environment.NewLine, "<br/>")
                            </p>
                        </div>
                    </div>
                }

                <div class="timeline-item" id="newFeedItem">
                    <div class="timeline-icon"></div>
                    <div class="timeline-content">
                        <h2>Add new</h2>
                        <div class="flex-column d-flex">
                            
                                <div>
                                    <label>Duration:</label>
                                    <input type="time" value="10:00:00" />
                                </div>

                                @*toggle*@
                                <div class="wrapper">
                                    <input id="dn" type="checkbox" />
                                    <label class="my-toggle" for="dn">
                                        <span class="toggle--handler"></span>
                                    </label>
                                </div>

                            <textarea id="newDesc"/>
                            <button type="submit">Save</button>
                        </div>
                    </div>
                </div>


            </div>
        </div>
