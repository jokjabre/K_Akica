@model IEnumerable<K_Akica.API.Contracts.Models.Pooper>

<nav class="sidenav navbar flex-column navbar-expand-lg navbar-light themed-container">

    <a class="navbar-brand">Poopers</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse flex-column" id="navbarNav" role="tablist" aria-orientation="vertical">
        @foreach (var pooper in Model)
        {
            var id = "pooper" + pooper.Id;
            <div class="hoverable pooperHolder" data-pooperid="@pooper.Id" onclick="onPooperHolderClick(@pooper.Id, this)"> @pooper.Name </div>
        }
    </div>

</nav>